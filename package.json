{
  "name": "babel-browsersync",
  "version": "1.0.0",
  "description": "A quick starter for Babel &amp; browser sync based projects.",
  "main": "index.js",
  "scripts": {
    "build:js": "babel app/js -d build/js -w",
    "build:jade": "jade app/templates -wH -o build",
    "build:scss": "node-sass app/scss -o build/css & node-sass -wr app/scss -o build/css",
    "clean": "rm -rf build",
    "images": "cp -pr app/images build/images",
    "live": "browser-sync start --server build --files build",
    "start": "npm run clean && npm run images & npm run build:js & npm run build:jade & npm run build:scss & npm run live"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rspt/babel-browsersync.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rspt/babel-browsersync/issues"
  },
  "homepage": "https://github.com/rspt/babel-browsersync#readme",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "browser-sync": "^2.11.2",
    "jade": "^1.11.0",
    "node-sass": "^3.4.2"
  }
}
